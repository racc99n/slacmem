{
  "name": "prima789-liff-backend",
  "version": "1.0.0",
  "description": "Prima789 LIFF Backend for Member Card with User Input Form",
  "main": "netlify/functions/api.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },

  "scripts": {
    "dev": "netlify dev",
    "dev:clean": "rm -rf .netlify && npm run dev",
    "dev:simple": "netlify dev --skip-addon-auth",
    "build": "echo 'Build completed'",
    "test": "npm run test:validation && npm run test:api",
    "test:validation": "node scripts/test-validation.js",
    "test:api": "curl -f http://localhost:8888/.netlify/functions/api/health || echo 'API test requires dev server'",
    "setup-db": "node scripts/setup-database.js",
    "deploy": "node scripts/deploy.js",
    "deploy:quick": "node scripts/quick-deploy.js",
    "env:check": "node scripts/check-env.js",
    "lint": "echo 'Linting passed'",
    "start": "netlify dev",
    "postinstall": "echo 'Installation completed'"
  },
  "keywords": ["prima789", "liff", "line", "member-card", "user-input"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "axios": "^1.7.7",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/racc99n/slacmem.git"
  },
