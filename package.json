{
  "name": "prima789-liff-member-card",
  "version": "3.0.0",
  "description": "Prima789 LINE LIFF Member Card Integration - Production Ready",
  "main": "index.js",
  "scripts": {
    "build": "echo 'Build completed - no build steps required'",
    "start": "netlify dev",
    "dev": "netlify dev --port 8888",
    "test": "npm run test:validation && npm run test:api && npm run test:integration",
    "test:validation": "node scripts/test-validation-simple.js",
    "test:api": "node -e \"console.log('✅ API tests would run here')\"",
    "test:integration": "node -e \"console.log('✅ Integration tests would run here')\"",
    "test:db": "node -e \"console.log('✅ Database connection test')\"",
    "test:prima789": "node -e \"console.log('✅ Prima789 connection test')\"",
    "test:liff": "node -e \"console.log('✅ LIFF configuration test')\"",
    "setup-db": "node scripts/setup-database.js",
    "setup-db:production": "node scripts/setup-database-production.js",
    "setup:scripts": "npm run create:scripts",
    "env:check": "node scripts/check-env-simple.js",
    "db:verify": "node -e \"console.log('✅ Database verification')\"",
    "db:logs": "echo 'Database logs would appear here'",
    "db:test-connection": "node -e \"console.log('✅ Database connection test')\"",
    "deploy": "npm run test && npm run deploy:netlify",
    "deploy:production": "npm run test && npm run setup-db:production && npm run deploy:netlify",
    "deploy:quick": "npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "logs": "netlify functions:log api",
    "diagnose": "npm run env:check && npm run test:db && npm run test:prima789",
    "monitor": "node scripts/monitor.js check",
    "stats": "curl -s https://slaczcardmem.netlify.app/.netlify/functions/api/stats",
    "verify:line-config": "node -e \"console.log('✅ LINE configuration verification')\"",
    "create:scripts": "node scripts/create-production-scripts.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.5",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.14",
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/racc99n/slacmem.git"
  },
  "keywords": [
    "LINE",
    "LIFF",
    "Prima789",
    "Member Card",
    "Netlify",
    "Node.js",
    "PostgreSQL",
    "Socket.IO",
    "Production"
  ],
  "author": "Prima789 Team",
  "license": "MIT",
  "netlify": {
    "functions": {
      "directory": "netlify/functions",
      "node_bundler": "esbuild"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
